html{
  font-family: sans-serif;
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
} 
  
body {
  /*background-color: #1F8DD6;*/
  background-color: #1FD68D;
  margin:5px 10px;
  text-align: center;
}
p {
  text-align:left;
}

h1, h2 {
  color: white;
}
h1 {
  font-size: 2em;
  margin: .67em 0;
}
hr{
  color:#666; 
}

img {
  border:0;
} 

li {
    list-style-position:inside;
}
pre {
  overflow: auto;
  font-family: sans-serif;
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%
}

button {
  overflow: visible;
  font-size:15px;
}
button {
  text-transform: none
}
button,
html input[type=button],
input[type=reset],
input[type=submit] {
  -webkit-appearance: button;
  cursor: pointer
}
button[disabled],
html input[disabled] {
  cursor: default
}
button::-moz-focus-inner,
input::-moz-focus-inner {
  border: 0;
  padding: 0
}

.pure-button {
    display: inline-block;
    vertical-align: middle;
    text-align: center;
    padding: .5em 1em;
    border: 1px solid #999;
    text-decoration: none;
    border-radius: 4px;
    margin: 2% 2% 2% 0.5%;
}

input {
  line-height: normal;
  font-size:20px;
}
fieldset {
  border: 1px solid silver;
  margin: 0 2px;
  padding: .35em .625em .75em
}
/* legend is only used in addstudents.php */
legend {
  border: 1px solid white;
  padding:15px; 
  margin: 10px;
  color: white; 
  font-size: 26px;
}
textarea {
  overflow: auto
}
table {
  border-collapse: collapse;
  border-spacing: 0;
  text-align: center;
  margin: auto;
}
td,
th {
  padding: 0
}


/********** My CLASSES ********/
#fixedtop {
  z-index:-1;
  position: fixed;
  top: 0px;
  width: 98%;
}

#header {
}

#header h1 {
  color:#009;
}

#main {
    text-align: left;
    margin-left: 5%;
    color:#009;
}

#mkbk,#ssData{
  margin:0;
  border-radius: 2px;
  padding:10px;
  line-height:120%;
}
#mkbk {
  border:solid blue 1px;
  float:left;
}
#ssData {
  border:solid red 1px;
  float:right;
}

#sliding-content {
  margin-left:-10px;
  top:85%;
  background: #CCC;
  position: absolute;
  z-index:2;
  min-height:10%;
  color:black;
  width:100%;
}

#sliding-content h1,h2 {
  color:#009;
}
#sliding-content h3 {
  color:#FFF;
}
#footer {
  background: #111;
  color:#CCC;
  padding: 1% 0;
  margin-top:5px;
}

.centered {
  display: block;
  margin-left: auto;
  margin-right: auto;
  text-align: center;
}
.comment-text{
  color:black; 
  max-width: 80%;
  width:70%;
  min-width: 30%;
  border: 2px solid gray;
  border-radius: 1.5em;
  padding: 1em;
}
.fontONE {
  /*font-family: Georgia, serif;*/
  font-weight: normal;
  font-size: 15px;
}

.error {
  color:#B00;
  font-weight:bold;
  padding:4px 0;
  background:#BBDDFF;
}

.fleft {
  float:left;
}
.fright {
  float:right;
}
.nomargin {
  margin:0;
}
.green {
  color:green;
}
.white {
  color:white;
}

/* These boxes are used in the comment display page.   
   Box is for displaying the alpha characters, box2 inner1 and innner2 are for the comments on commentPage.php */
.box,.box2 {
  border: 1px solid blue;
  border-radius: 4px;
  line-height: 1em;
  margin: 2%;
  padding: 5px;
  vertical-align:middle;
}

.box2 {
  background-color:#AAA;
  border: 1px solid #666;
  text-align:left;
  overflow:hidden;
  padding:10px;

}
.box2 .inner1 {
  float:left;
}
.box2 .inner2 {
  background-color:#888;
  padding:5px;
  float:right;
  margin-top:3px;
}

/* these columns are for the table of fields in addstudent.php */
.col1, .col2{
   display: inline-block;
}
.col1 {
   float:left;
}
.col1 p {
   margin:0;
   text-align:right;
}   
.col2 {
   float:right;
}

.tcol1, .tcol2 {
  padding:4px;
}
.tcol1 p {
  text-align:right;
  margin:0;
}
.tcol2 {
  text-align:left;
}

/* this is for studentFind.php to higlhight certain rows */
.row0 {}
.row1 { color:#A00;}
.row2 { color:#0FF;} /*this should never happen */


.student-desc {
}

.student-img {
  margin: auto;
  padding: 0 10px;
  height: 225px;
  width: 180px;
  float:right;
}

.subhead {
  color: white;
  opacity: 0.8;
}

.nav-button {
  display:block;
  text-decoration:none;
  margin-top: 0.5em;
  padding: 5px;
  font-size: 18px;
  color:white;
  text-transform:uppercase;
  border:1px solid silver;
  border-radius: 5px;
  vertical-align: middle;
}

.table-canvas
{
    -webkit-border-radius: 8px;
    -moz-border-radius: 8px;
    overflow:hidden;
    border-radius: 10px;
    -pie-background: linear-gradient(#ece9d8, #E5ECD8);
    box-shadow: #666 0px 2px 3px;
    behavior: url(Include/PIE.htc);
    overflow: hidden;
    width: 80%;
}
.table-canvas td {
  cursor:pointer; cursor:hand;
}


/* copied from PURECSS */
.pure-form .pure-input-2-3 {
    width: 66%
}
.pure-form {
  display:block;
/*  font-size: .75em; */
  padding: .2em 0 .8em;
  margin: 1.5em 0 0 ;
}
.pure-form fieldset {
    margin: 0;
    padding: .35em 0 .75em;
    border: 0
}

 .pure-control-group{
  margin-bottom: .5em;
  clear:both;
}

.pure-form textarea {
    padding: .5em .6em;
    display: inline-block;
    border: 1px solid #ccc;
    box-shadow: inset 0 1px 3px #ddd;
    border-radius: 4px;
    vertical-align: middle;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box
}

.pure-form input,
.pure-form textarea {
    padding: 0.5em 0.6em;
    display: inline-block;
    border: 1px solid #CCC;
    box-shadow: 0px 1px 3px #DDD inset;
    border-radius: 4px;
    vertical-align: middle;
    box-sizing: border-box;
}

/* Pure table stuff */
.pure-table {
    border-collapse: collapse;
    border-spacing: 0;
    empty-cells: show;
    border: 1px solid #cbcbcb
}
.pure-table caption {
    color: #000;
    font: italic 85%/1 arial, sans-serif;
    padding: 1em 0;
    text-align: center
}
.pure-table td,
.pure-table th {
    border-left: 1px solid #cbcbcb;
    border-width: 0 0 0 1px;
    font-size: inherit;
    margin: 0;
    overflow: visible;
  padding: .5em 1em;
    text-align: left;
}
.pure-table td:first-child,
.pure-table th:first-child {
    border-left-width: 0
}
.pure-table thead {
    background-color: #e0e0e0;
    color: #000;
    text-align: left;
    vertical-align: bottom;
    font-weight: bold;
}
.pure-table td {
    background-color: white
}
.pure-table-odd td {
    background-color: #f2f2f2
}
.pure-table-striped tr:nth-child(2n-1) td {
    background-color: #f2f2f2
}
.pure-table-bordered td {
    border-bottom: 1px solid #cbcbcb
}
.pure-table-bordered tbody>tr:last-child>td {
    border-bottom-width: 0
}
